services:
  - type: web
    name: vectorshift-ventures-website
    env: static
    plan: free
    buildCommand: npm ci && npm run build
    staticPublishPath: ./dist
    envVars:
      - key: NODE_ENV
        value: production
      - key: VITE_VAPI_API_KEY
        sync: false
      - key: VITE_VAPI_ASSISTANT_ID
        sync: false
      - key: VITE_VAPI_PHONE_NUMBER_ID
        sync: false
      - key: VITE_WEBHOOK_URL
        sync: false
    autoDeploy: true
